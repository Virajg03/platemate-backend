<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    android:fillViewport="true"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:background="@drawable/neubrutal_header_back"
                android:padding="8dp"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PRODUCT DETAILS"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Product Image Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/neubrutal_shadow"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivProductImage"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:background="@color/white"
                        android:contentDescription="Product Image" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Product Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/neubrutal_shadow"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PRODUCT INFORMATION"
                        android:textColor="@color/login_orange"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="24dp"
                        android:background="@color/brutalMuted"
                        android:padding="12dp"
                        android:textAlignment="center" />

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Price -->
                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹100"
                        android:textColor="@color/login_orange"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Category -->
                    <TextView
                        android:id="@+id/tvCategoryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category: N/A"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Meal Type -->
                    <TextView
                        android:id="@+id/tvMealType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type: N/A"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvProductDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product description goes here..."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Ingredients -->
                    <TextView
                        android:id="@+id/tvIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingredients: N/A"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Provider Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/neubrutal_shadow"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PROVIDER INFORMATION"
                        android:textColor="@color/login_orange"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="24dp"
                        android:background="@color/brutalMuted"
                        android:padding="12dp"
                        android:textAlignment="center" />

                    <!-- Provider Name -->
                    <TextView
                        android:id="@+id/tvProviderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provider: N/A"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Business Name -->
                    <TextView
                        android:id="@+id/tvProviderBusinessName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business: N/A"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add to Cart Button -->
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ADD TO CART"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@drawable/neubrutal_button_shadow"
                android:stateListAnimator="@null"
                android:backgroundTint="@null"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
