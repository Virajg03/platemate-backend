<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    android:fillViewport="true"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:background="@drawable/neubrutal_header_back"
                android:padding="8dp"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvProductNameHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Product Image Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:background="@color/white"
                    android:contentDescription="Product Image" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Product Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="24dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT INFORMATION"
                    android:textColor="@color/login_orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="24dp"
                    android:background="@color/brutalMuted"
                    android:padding="12dp"
                    android:textAlignment="center" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Price and Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹100"
                        android:textColor="@color/login_orange"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvProductCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunch"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/category_badge"
                        android:padding="8dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product description goes here..."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Quantity Selector -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/btnDecreaseQuantity"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/back"
                        android:background="@drawable/neubrutal_card"
                        android:padding="12dp"
                        android:contentDescription="Decrease"
                        android:clickable="true"
                        android:focusable="true"
                        android:rotation="90" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="80dp"
                        android:layout_height="56dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/neubrutal_input_field"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <ImageView
                        android:id="@+id/btnIncreaseQuantity"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/back"
                        android:background="@drawable/neubrutal_card"
                        android:padding="12dp"
                        android:contentDescription="Increase"
                        android:clickable="true"
                        android:focusable="true"
                        android:rotation="270" />
                </LinearLayout>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="ADD TO CART"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:background="@drawable/neubrutal_button_shadow"
                    android:stateListAnimator="@null"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Provider Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="24dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROVIDER INFORMATION"
                    android:textColor="@color/login_orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="24dp"
                    android:background="@color/brutalMuted"
                    android:padding="12dp"
                    android:textAlignment="center" />

                <!-- Provider Name -->
                <TextView
                    android:id="@+id/tvProviderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provider Name"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvProviderRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5 ⭐"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Delivery Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Time"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDeliveryTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30-45 minutes"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Radius"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDeliveryRadius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 km"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

