<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="24dp"
    android:background="#FFF5EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELIVERY ADDRESS"
            android:textColor="@color/login_orange"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="24dp"
            android:background="@color/brutalMuted"
            android:padding="16dp"
            android:textAlignment="center" />

        <!-- Street Address 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street Address 1 *"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter street address (e.g., building name, house number)"
            android:inputType="textPostalAddress|textMultiLine"
            android:minLines="2"
            android:maxLines="3"
            android:background="@drawable/neubrutal_input_field"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Street Address 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street Address 2 (Optional)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etStreet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter additional address details (e.g., apartment, floor, landmark)"
            android:inputType="textPostalAddress|textMultiLine"
            android:minLines="2"
            android:maxLines="3"
            android:background="@drawable/neubrutal_input_field"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- City -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City *"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/neubrutal_input_field"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- State (Auto-populated) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State *"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State will be auto-filled"
            android:inputType="text"
            android:background="@drawable/neubrutal_input_field"
            android:padding="16dp"
            android:textSize="16sp"
            android:enabled="false"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginBottom="16dp" />

        <!-- Zip Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip Code *"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etZipCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter zip code"
            android:inputType="number"
            android:maxLength="10"
            android:background="@drawable/neubrutal_input_field"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="CANCEL"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/neubrutal_card"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="12dp"
                android:minWidth="120dp" />

            <Button
                android:id="@+id/btnSaveAddress"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="SAVE ADDRESS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@drawable/neubrutal_button_shadow"
                android:stateListAnimator="@null"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:minWidth="120dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

