<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:minWidth="320dp"
    android:background="#FFF5EE">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:text="VERIFY OTP"
        android:textColor="@color/login_orange"
        android:textSize="26sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginBottom="20dp"
        android:background="@color/brutalMuted"
        android:padding="18dp"
        android:gravity="center"
        android:textAlignment="center" />

    <!-- Instruction -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit OTP to confirm delivery"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginBottom="28dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textAlignment="center" />

    <!-- OTP Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP *"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etOTP"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:minHeight="72dp"
        android:hint="Enter 6-digit OTP"
        android:inputType="number"
        android:maxLength="6"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.15"
        android:background="@drawable/neubrutal_input_field"
        android:padding="20dp"
        android:layout_marginBottom="8dp" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="CANCEL"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/neubrutal_card"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:ellipsize="none"
            android:singleLine="true"
            android:gravity="center" />

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="VERIFY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/neubrutal_button_shadow"
            android:stateListAnimator="@null"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:ellipsize="none"
            android:singleLine="true"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>








