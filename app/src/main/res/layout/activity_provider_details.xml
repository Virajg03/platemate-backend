<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    android:fillViewport="true"
    tools:context=".ProviderDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:background="@drawable/neubrutal_header_back"
                android:padding="8dp"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complete Profile"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Business Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="24dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BUSINESS INFORMATION"
                    android:textColor="@color/login_orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="24dp"
                    android:background="@color/brutalMuted"
                    android:padding="12dp"
                    android:textAlignment="center" />

                <!-- Business Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etBusinessName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter your business name"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Describe your business"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:minLines="3"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

                <!-- Zone ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zone ID"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etZone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter zone ID"
                    android:inputType="number"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

                <!-- Commission Rate -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commission Rate (%)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etCommissionRate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter commission rate"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

                <!-- Delivery Service Checkbox -->
                <CheckBox
                    android:id="@+id/cbProvidesDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I provide delivery service"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:buttonTint="@color/login_orange" />

                <!-- Delivery Radius -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Radius (km)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etDeliveryRadius"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter delivery radius"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#999999" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Address Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="24dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS INFORMATION"
                    android:textColor="@color/login_orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="24dp"
                    android:background="@color/brutalMuted"
                    android:padding="12dp"
                    android:textAlignment="center" />

                <!-- Street Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street Address"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etStreet"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter street address"
                    android:inputType="textPostalAddress"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

                <!-- City -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter city"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

                <!-- State -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etState"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter state"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

                <!-- Zip Code -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip Code"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etZipCode"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/neubrutal_input_field"
                    android:hint="Enter zip code"
                    android:inputType="number"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#666666" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveDetails"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="SAVE &amp; CONTINUE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@drawable/neubrutal_button_shadow"
            android:stateListAnimator="@null"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
