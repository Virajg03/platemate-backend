<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    tools:context=".ProviderProfileFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:background="@drawable/neubrutal_header_back"
                android:padding="8dp"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Provider Profile"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />
        </LinearLayout>

        <!-- Profile Picture Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/neubrutal_shadow"
                android:padding="32dp">

                <!-- Circular Profile Picture with Edit Icon -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <!-- Profile Picture Container with Shadow -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="75dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/neubrutal_shadow"
                            android:padding="0dp">

                            <ImageView
                                android:id="@+id/ivProfilePicture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="@drawable/circular_shape"
                                android:contentDescription="Profile Picture"
                                android:src="@drawable/baseline_person_24"
                                android:clipToOutline="true" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Edit Icon Overlay -->
                    <ImageView
                        android:id="@+id/btnEditProfilePicture"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_edit"
                        android:background="@drawable/neubrutal_card"
                        android:padding="8dp"
                        android:contentDescription="Edit Profile Picture"
                        android:clickable="true"
                        android:focusable="true" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Business Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="24dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BUSINESS INFORMATION"
                    android:textColor="@color/login_orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="20dp"
                    android:background="@color/brutalMuted"
                    android:padding="12dp"
                    android:textAlignment="center" />

                <!-- Business Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUSINESS NAME"
                        android:textColor="@color/login_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvBusinessName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESCRIPTION"
                        android:textColor="@color/login_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Business description"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- Commission Rate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMMISSION RATE"
                        android:textColor="@color/login_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvCommissionRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5%"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Zone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DELIVERY ZONE"
                        android:textColor="@color/login_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone ID: 1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Verification Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VERIFICATION STATUS"
                        android:textColor="@color/login_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvVerificationStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending Verification"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/category_badge"
                        android:padding="12dp"
                        android:textColor="@color/login_orange" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- User Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="24dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USER INFORMATION"
                    android:textColor="@color/login_orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="20dp"
                    android:background="@color/brutalMuted"
                    android:padding="12dp"
                    android:textAlignment="center" />

                <!-- Username -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USERNAME"
                        android:textColor="@color/login_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@username"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Email Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMAIL ADDRESS"
                        android:textColor="@color/login_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@example.com"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Account Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neubrutal_shadow"
                android:padding="24dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT"
                    android:textColor="@color/login_orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="20dp"
                    android:background="@color/brutalMuted"
                    android:padding="12dp"
                    android:textAlignment="center" />

                <!-- Edit Profile -->
                <LinearLayout
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/neubrutal_card"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/back"
                        android:rotation="270"
                        android:contentDescription="Arrow" />
                </LinearLayout>

                <!-- My Address Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/neubrutal_shadow"
                        android:padding="20dp">

                        <!-- Address Icon -->
                        <ImageView
                            android:id="@+id/addressIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_add_location_24"
                            android:contentDescription="Address"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:tint="@color/login_orange" />

                        <!-- Edit Icon -->
                        <ImageView
                            android:id="@+id/btnEditAddress"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_edit"
                            android:background="@drawable/neubrutal_card"
                            android:padding="8dp"
                            android:contentDescription="Edit Address"
                            android:clickable="true"
                            android:focusable="true" />

                        <!-- Address Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/addressIcon"
                            android:layout_toStartOf="@id/btnEditAddress"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MY ADDRESS"
                                android:textColor="@color/login_orange"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="8dp" />

                            <!-- Address Display -->
                            <LinearLayout
                                android:id="@+id/addressDisplayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tvStreetAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="123 Main Street"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvCityStateZip"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="City, State - 123456"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="4dp" />
                            </LinearLayout>

                            <!-- No Address State -->
                            <LinearLayout
                                android:id="@+id/noAddressLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No address added yet"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:textStyle="italic" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Delivery Partners Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <RelativeLayout
                        android:id="@+id/btnDeliveryPartners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/neubrutal_shadow"
                        android:padding="20dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Delivery Icon -->
                        <ImageView
                            android:id="@+id/deliveryIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_delivery_dining_24"
                            android:contentDescription="Delivery Partners"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:tint="@color/login_orange" />

                        <!-- Arrow Icon -->
                        <ImageView
                            android:id="@+id/arrowIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/back"
                            android:rotation="270"
                            android:contentDescription="Arrow" />

                        <!-- Delivery Partners Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/deliveryIcon"
                            android:layout_toStartOf="@id/arrowIcon"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DELIVERY PARTNERS"
                                android:textColor="@color/login_orange"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage your delivery partners"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/neubrutal_card"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="Logout"
                android:tint="@color/login_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                android:textColor="@color/login_orange"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

<!-- Progress Bar Overlay -->
<ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:visibility="gone" />

</FrameLayout>

