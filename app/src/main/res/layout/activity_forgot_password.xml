<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login_bg_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textAlignment="center"
                android:textColor="@color/login_orange"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Enter your username or email address and we'll send you an OTP to reset your password."
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/usernameOrEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/mail_icon"
                android:drawablePadding="3dp"
                android:hint="Username or Email"
                android:inputType="text"
                android:padding="8dp"
                android:textColorHighlight="@color/cardview_dark_background" />

            <Button
                android:id="@+id/requestOtpButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Send OTP"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/login_orange" />

            <TextView
                android:id="@+id/backToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Back to Login"
                android:textColor="@color/login_orange"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

