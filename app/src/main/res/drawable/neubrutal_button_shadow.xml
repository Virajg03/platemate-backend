<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (offset to bottom-right) -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="-6dp"
        android:bottom="-6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- Main button layer -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" />
            <stroke
                android:width="4dp"
                android:color="@color/black" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>


